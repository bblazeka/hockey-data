{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "baseUrl": "src",
    "lib": ["es6"],
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "typeRoots": ["node_modules/@types", "types", "types/api"]
  },
  "include": ["**/*.ts", "**/*.d.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
